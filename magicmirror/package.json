    "dotenv": "^16.3.1",
    "envsub": "^3.1.2",
    "node-fetch": "^2.6.9",
    "module-alias": "^2.2.3",
    "rss-parser": "^3.13.0",

    /* ---------- Runtime ---------- */
    "electron": "^25.3.1"
  },

  "devDependencies": {},

  "_moduleAliases": {
    "config":   "config",
    "modules":  "modules",
    "vendor":   "vendor",
