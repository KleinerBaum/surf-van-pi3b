{
  "name": "magicmirror-surf-van",
  "version": "1.0.0",
  "description": "MagicMirror² – Surf-Van Dashboard (Pi-3B+ Optimiert)",
  "main": "js/electron.js",

  "scripts": {
    "start": "DISPLAY=\"${DISPLAY:=:0}\" ./node_modules/.bin/electron js/electron.js",
